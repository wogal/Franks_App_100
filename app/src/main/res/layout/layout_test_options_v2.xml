<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/earle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txt_header_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/obect_header_txt_v1_"
            android:gravity="center"
            android:padding="15dp"
            android:text="Test Options (v2)"
            android:textAllCaps="false"
            android:textColor="#F4511E"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_v_sales_item_name_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:background="@drawable/obect_header_txt_v1_"
            android:gravity="center"
            android:padding="10dp"
            android:text="-------"
            android:textAllCaps="false"
            android:textColor="#F4511E"
            android:textSize="30dp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/But_Make_loc_Dbase_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_login_background"
            android:text="Make Location Dbase"
            android:textAllCaps="false"
            android:textColor="#ff7b07"
            android:textSize="25dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/But_test_activity_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_login_background"
            android:text="------------"
            android:textAllCaps="false"
            android:textColor="#ff07f7"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/But_select_Post_File_Edit_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_login_background"
            android:text="-----------"
            android:textAllCaps="false"
            android:textColor="#dc46c8"
            android:textSize="25dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/But_select_File_To_Post_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_login_background"
            android:text="--------------"
            android:textAllCaps="false"
            android:textColor="#df70da"
            android:textSize="25dp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/But_select_Text_2_speech_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_login_background"
            android:text="--------"
            android:textAllCaps="false"
            android:textColor="#df6412"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>
</RelativeLayout>
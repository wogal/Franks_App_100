<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ItemView_v3"
              android:layout_width="match_parent"
              android:layout_height="75dp"
              android:background="@drawable/bg_btn_login_background"
              android:orientation="horizontal"
              android:padding="10dp">


    <ImageView
        android:id="@+id/Image_View_v3"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:scaleType="fitStart"
        android:src="@drawable/for_sale_logo_640_480"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/text_v3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:lines="2"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:text="Post - Bath Room Items ----------------"
        android:textColor="#e9370f"
        android:textSize="20dp"
        android:textStyle="bold"/>


</LinearLayout>
